<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
              android:weightSum="1">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    >

    <Spinner
        android:id="@+id/spinner"
        style="@style/spinner_style"
        android:layout_width="206dp"
        android:layout_height="46dp"
        android:layout_marginBottom="10dp"
android:layout_weight="1"
        android:layout_marginTop="5dp"

        android:hint="@string/hint_name"
        android:prompt="@string/spinprompt"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/spinner"
    android:layout_gravity="center"
    android:text="اختار الاخصائي"
    android:gravity="right"
    android:layout_weight="1"
    android:layout_alignParentRight="true"
  />
</LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.2dp"
        android:id="@+id/separator2"
        android:visibility="visible"
android:padding="10dp"
        android:background="@android:color/darker_gray"
        />
<ImageView
    android:layout_marginTop="10dp"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/dokter"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp">

        <TableRow
            android:background="@color/primaryColor"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="مواعيد العيادة"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="العنوان"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#fff"
                android:text="اسم الطبيب" />
        </TableRow>

        <TableRow
            android:background="#ECEFF1"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"

                android:id="@+id/textViewSession"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/textViewCourse"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/textViewName"/>
        </TableRow>



    </TableLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:id="@+id/separator1"
        android:visibility="visible"
android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        />
    <EditText
        android:id="@+id/p_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group_top"
        android:hint="اسم المريض"
        />
    <EditText
        android:id="@+id/p_gender"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:hint="النوع"
        android:background="@drawable/group_row"
        />

    <EditText
        android:id="@+id/Phone_No"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="رقم الهاتف"
        android:background="@drawable/group_bottom"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:id="@+id/separator10"
        android:visibility="visible"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="Book"
        android:drawableLeft="@drawable/clock"
        android:id="@+id/button"
        android:textColor="@color/primaryColor"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

</LinearLayout>