<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/add_alarm_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    >

                    <TextView
                        android:id="@+id/start_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Start Date"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/primaryColor"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/end_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="End Date"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/primaryColor"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/time_of_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/time_of_alarm_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:text="Time for Medicine Schedule"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/primaryColor"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_med_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primaryColor">

                        <EditText
                            android:id="@+id/enter_medicine_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="Enter Name of Medicine"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/primaryColor"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_med_dosage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primaryColor">

                        <EditText
                            android:id="@+id/enter_medicine_dosage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="Enter Dose of Medicine"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/primaryColor"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primaryColor">

                        <EditText
                            android:id="@+id/enter_medicine_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="Enter Quantity of Medicine"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/primaryColor"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primaryColor">

                        <EditText
                            android:id="@+id/enter_medicine_comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:hint="Enter Comment"
                            android:inputType="textLongMessage"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/primaryColor"
                            android:textColorHint="@color/primaryColor"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/done"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/add_alarm"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:tint="@color/primaryColor"
                    android:src="@drawable/add_alarm"
                    android:transitionName="@string/transition_name_alarm"/>
            </android.support.v7.widget.CardView>
